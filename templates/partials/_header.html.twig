<header class="header">
    <div class="container container__large">
        <picture class="header__logo">
            <img src="{{ asset('build/images/logo-black.svg') }}" alt="Logo Dev obs">
        </picture>
        <nav class="main-nav">
            <button class="toggle-menu" aria-controls="main-menu" aria-expanded="false">
                <span class="bar first-bar"></span>
                <span class="bar second-bar"></span>
                <span class="bar third-bar"></span>
                <span class="screen-reader-text">Menu</span>
            </button>
            <ul class="menu main-menu" id="main-menu" hidden>
                <li class="menu-item"><a href="{{ path('home') }}" class="menu-link">Accueil</a></li>
                {% if app.user %}
                <li class="menu-item"><a href="{{ path('societe_show', {'societe': app.user.id}) }}"
                                         class="menu-link">Mon
                        espace</a></li>
                {% endif %}
                <li class="menu-item"><a href="{{ path('offre_index') }}" class="menu-link">Toutes les offres</a></li>
                {% if app.user and is_granted('ROLE_ADMIN') %}
                <li class="menu-item"><a href="{{ path('societe_index') }}" class="menu-link">Les sociétés</a></li>
                <li class="menu-item"><a href="{{ path('candidat_index') }}" class="menu-link">Les candidats</a></li>
                {% endif %}
                {% if app.user %}
                <li class="menu-item"><a href="{{ path('app_logout') }}" class="button
                button--primary">Déconnexion</a></li>
                {% else %}
                <li class="menu-item"><a href="{{ path('app_login') }}" class="button
                button--primary">Connexion</a></li>
                <li class="menu-item"><a href="{{ path('societe_add') }}" class="button
                button--secondary">Inscription</a></li>
                {% endif %}
            </ul>
        </nav>

    </div>
</header>