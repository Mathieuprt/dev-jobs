{% extends 'base.html.twig' %}

{% block title %}Modification{% endblock %}

{% block body %}

    <section class="banner banner__candidat">
        <div class="container">
            <h1 class="heading heading--1 heading--1__white">Modifier une candidature</h1>
        </div>
    </section>

    <main>
        <section class="page__content--form">
            <div class="container">
                <h2 class="heading heading--h2 screen-reader-text">Page candidature</h2>

                <p>Modifier les informations du candidat</p>

                <div class="form__candidat">
                    {{ form_start(candidat_form) }}
                    {{ form_widget(candidat_form) }}
                    <button class="button button--primary">{{ button_label|default('Modifier') }}</button>
                    {{ form_end(candidat_form) }}
                </div>
            </div>
        </section>
    </main>

{% endblock %}